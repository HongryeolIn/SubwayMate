<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    tools:context=".Settings_Language">

    <ImageButton
        android:id="@+id/settings_language_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back48x48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_language_title"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="260dp"
        android:text="@string/title_language_settings"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/settings_language_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settings_language_back_button"
        app:layout_constraintTop_toTopOf="@+id/settings_language_back_button" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="275dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="339dp"
        android:background="@drawable/round_layout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_language_title">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <RadioGroup
            android:id="@+id/settings_language_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/settings_language_korean_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layoutDirection="rtl"
                android:paddingHorizontal="5dp"
                android:text="한국어"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:buttonTint="@color/radio_button_tint"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/black_space" />

            <RadioButton
                android:id="@+id/settings_language_English_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layoutDirection="rtl"
                android:paddingHorizontal="5dp"
                android:text="English"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:buttonTint="@color/radio_button_tint"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/black_space" />

            <RadioButton
                android:id="@+id/settings_language_Japanese_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layoutDirection="rtl"
                android:paddingHorizontal="5dp"
                android:text="日语 "
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:buttonTint="@color/radio_button_tint"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/black_space" />

            <RadioButton
                android:id="@+id/settings_language_Chinese_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layoutDirection="rtl"
                android:paddingHorizontal="5dp"
                android:textColor="@color/text"
                android:buttonTint="@color/radio_button_tint"
                android:text="中文"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>